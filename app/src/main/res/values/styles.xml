<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#747474</item>
        <item name="colorAccent">#009688</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="SampleWidget" />

    <!--Card-->

    <!--<item name="android:layout_marginLeft">@dimen/card_margin</item>-->
    <!--<item name="android:layout_marginRight">@dimen/card_margin</item>-->

    <style name="Widget.SampleDashboard.Card" parent="SampleWidget">
        <item name="android:gravity">center</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <style name="Widget.SampleDashboard.Item" parent="SampleWidget">
    </style>

    <style name="Widget.SampleDashboard.Item.Title" parent="SampleWidget">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/theme_color</item>
        <!--<item name="fontFamily">sans-serif</item>-->
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.SampleDashboard.Item.Description" parent="SampleWidget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <!--<item name="fontFamily">sans-serif-light</item>-->
        <item name="android:textColor">@color/theme_color</item>
    </style>

    <!--card end-->

</resources>
